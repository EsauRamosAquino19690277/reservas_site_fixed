<!doctype html><html lang="es"><head>
<meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
<title><%= title %> · <%= site.title %></title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/styles.css" rel="stylesheet">
<style>:root{ --brand-green:<%= site.navbar_color || '#1b8f3a' %>; }</style>
</head><body>
<nav class="navbar navbar-expand-lg">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/">
      <% if(site.logo_url){ %><img src="<%= site.logo_url %>" class="brand-logo" alt="Logo"><% } else { %><strong><%= site.title %></strong><% } %>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"><span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="nav">
    </div>
  </div>
</nav>
<main class="container my-4">
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3>Panel</h3>
  <div><a href="/admin/logout" class="btn btn-outline-secondary btn-sm">Salir</a></div>
</div>
<div class="row g-3 mb-3">
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/publicaciones">Promociones</a></div>
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/actividades">Actividades</a></div>
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/reservas">Reservas</a></div>
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/encuestas">Encuestas</a></div>
</div>
<div class="row g-3 mb-3">
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/experiencias">Publicaciones</a></div>
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/contactos">Contactos</a></div>
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/historial">Historial</a></div>
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/paginas">Páginas</a></div>
</div>
<div class="row g-3 mb-3">
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/ajustes">Ajustes</a></div>
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/banco">Datos bancarios</a></div>
  <div class="col-md-3"><a class="btn btn-light w-100" href="/admin/checkin">Check-in</a></div>

</div>
<div class="mb-3">
</div>
<h5>Próximas reservas</h5>
<table class="table table-sm">
  <thead><tr><th>Fecha</th><th>Actividad</th><th>Titular</th><th>Tel</th><th>Personas</th><th>Estado</th></tr></thead>
  <tbody>
    <% upcoming.forEach(function(r){ %>
      <tr>
        <td><%= dayjs(r.start_at).format('DD/MM HH:mm') %></td>
        <td><%= r.act_name %></td>
        <td><a href="/admin/reservas/<%= r.id %>"><%= r.holder_name %></a></td>
        <td><%= r.phone %></td>
        <td><%= r.party_size %></td>
        <td><span class="badge bg-<%= r.status==='paid'?'success':'secondary' %>"><%= r.status %></span></td>
      </tr>
    <% }) %>
  </tbody>
</table>
<%- include('pagination', { pagination: pagination }) %>


</main>
<footer class="site-footer text-white mt-4" style="background:var(--brand-green);">
  
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body></html>
