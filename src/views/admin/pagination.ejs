<%
const p = pagination || {};
const page = p.page || 1;
const totalPages = p.totalPages || 1;
const baseUrl = p.baseUrl || '';
%>
<% if (totalPages > 1) { %>
  <div class="admin-pagination mt-3 mb-3">
    <% const prevPage = page - 1; const nextPage = page + 1; %>

    <% if (page > 1) { %>
      <a class="page-btn" href="<%= baseUrl %>?page=<%= prevPage %>">&lsaquo;</a>
    <% } else { %>
      <span class="page-btn disabled">&lsaquo;</span>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
      <% if (i === page) { %>
        <span class="page-btn active"><%= i %></span>
      <% } else { %>
        <a class="page-btn" href="<%= baseUrl %>?page=<%= i %>"><%= i %></a>
      <% } %>
    <% } %>

    <% if (page < totalPages) { %>
      <a class="page-btn" href="<%= baseUrl %>?page=<%= nextPage %>">&rsaquo;</a>
    <% } else { %>
      <span class="page-btn disabled">&rsaquo;</span>
    <% } %>
  </div>
<% } %>
