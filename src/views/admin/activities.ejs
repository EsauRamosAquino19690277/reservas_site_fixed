<!doctype html><html lang="es"><head>
<meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
<title><%= title %> · <%= site.title %></title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/styles.css" rel="stylesheet">
<style>:root{ --brand-green:<%= site.navbar_color || '#1b8f3a' %>; }</style>
</head><body>
<nav class="navbar navbar-expand-lg">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/">
      <% if(site.logo_url){ %><img src="<%= site.logo_url %>" class="brand-logo" alt="Logo"><% } else { %><strong><%= site.title %></strong><% } %>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"><span class="navbar-toggler-icon"></span></button>

  </div>
</nav>
<main class="container my-4">
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="mb-0">Actividades</h3>
  <a href="/admin" class="btn btn-outline-secondary">Volver al panel</a>
</div>

<form method="post" enctype="multipart/form-data" class="row g-2 mb-3">
  <div class="col-md-3"><input name="name" class="form-control" placeholder="Nombre" required></div>
  <div class="col-md-2"><input name="location" class="form-control" placeholder="Lugar"></div>
  <div class="col-md-2"><input name="base_price" type="number" class="form-control" placeholder="Precio (centavos)"></div>
  <div class="col-md-5">
    <input type="file" name="media_files" class="form-control" accept="image/*,video/mp4,video/webm" multiple>
    <small class="text-muted">Puedes adjuntar 1-12 archivos o pegar JSON debajo.</small>
  </div>
  <div class="col-12"><input name="media_json" class="form-control" placeholder='(Opcional) JSON de URLs'></div>
  <div class="col-12"><textarea name="description" class="form-control" placeholder="Descripción"></textarea></div>
  <div class="col-12"><textarea name="policy" class="form-control" placeholder="Políticas"></textarea></div>
  <div class="col-12"><button class="btn btn-primary">Agregar</button></div>
</form>
<table class="table table-sm">
  <thead><tr><th>Nombre</th><th>Lugar</th><th>Acciones</th></tr></thead>
  <tbody>
    <% acts.forEach(function(a){ %>
      <tr>
        <td><%= a.name %></td><td><%= a.location %></td>
        <td>
          <a class="btn btn-outline-primary btn-sm" href="/admin/slots/<%= a.id %>">Horarios</a>
          <form method="post" action="/admin/actividades/<%= a.id %>/delete" class="d-inline" onsubmit="return confirm('¿Eliminar?')">
            <button class="btn btn-danger btn-sm">Eliminar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<a href="/admin" class="btn btn-primary admin-back">Volver al panel</a>

</main>

<footer class="site-footer text-white mt-4" style="background:var(--brand-green);">

</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body></html>
