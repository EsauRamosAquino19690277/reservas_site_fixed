<!doctype html><html lang="es"><head>
<meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
<title><%= title %> · <%= site.title %></title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/styles.css" rel="stylesheet">
<style>:root{ --brand-green:<%= site.navbar_color || '#1b8f3a' %>; }</style>
</head><body>
<nav class="navbar navbar-expand-lg">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/">
      <% if(site.logo_url){ %><img src="<%= site.logo_url %>" class="brand-logo" alt="Logo"><% } else { %><strong><%= site.title %></strong><% } %>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"><span class="navbar-toggler-icon"></span></button>
    <div class="collapse navbar-collapse" id="nav">
    </div>
  </div>
</nav>
<main class="container my-4">
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="mb-0">Horarios — <%= (act && act.name) || '' %></h3>
  <a href="/admin" class="btn btn-outline-secondary">Volver al panel</a>
</div>

<form method="post" class="row g-2 mb-3">
  <div class="col-md-3"><input name="start_at" type="datetime-local" class="form-control" required></div>
  <div class="col-md-3"><input name="end_at" type="datetime-local" class="form-control" required></div>
  <div class="col-md-2"><input name="capacity_total" type="number" class="form-control" placeholder="Cupo" required></div>
  <div class="col-md-2"><input name="price_cents" type="number" class="form-control" placeholder="Precio (centavos)"></div>
  <div class="col-md-1"><select name="published" class="form-select"><option value="1">Publicar</option><option value="0">Ocultar</option></select></div>
  <div class="col-md-1"><button class="btn btn-primary">Agregar</button></div>
</form>
<table class="table table-sm">
  <thead><tr><th>Inicio</th><th>Fin</th><th>Cupo</th><th>Reservado</th><th>Acción</th></tr></thead>
  <tbody>
    <% slots.forEach(function(s){ %>
      <tr>
        <td><%= s.start_at %></td><td><%= s.end_at %></td>
        <td><%= s.capacity_total %></td><td><%= s.capacity_reserved %></td>
        <td>
          <form method="post" action="/admin/slots/<%= s.id %>/delete" onsubmit="return confirm('¿Eliminar horario?')">
            <button class="btn btn-danger btn-sm">Eliminar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<a href="/admin" class="btn btn-primary admin-back">Volver al panel</a>

</main>
<footer class="site-footer text-white mt-4" style="background:var(--brand-green);">

</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body></html>
