<!doctype html><html lang="es"><head>
<meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
<title><%= title %> · <%= site.title %></title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/styles.css" rel="stylesheet">
</head><body>
<nav class="navbar navbar-expand-lg">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/admin">
      <% if (site.logo_url) { %>
        <img src="<%= site.logo_url %>" class="brand-logo me-2" alt="Logo">
      <% } else { %>
        <strong><%= site.title %></strong>
      <% } %>
      <span class="badge bg-dark ms-2">Admin</span>
    </a>
  </div>
</nav>

<main class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Encuestas activas</h3>
    <div class="d-flex gap-2">
      <a href="/admin/encuestas/historial" class="btn btn-outline-secondary btn-sm">Ver concluidas</a>
      <a href="/admin/encuestas/nueva" class="btn btn-primary btn-sm">Nueva encuesta</a>
    </div>
  </div>

  <% if (!surveys.length) { %>
    <div class="alert alert-info">No hay encuestas activas. Crea una nueva.</div>
  <% } else { %>
    <table class="table table-sm align-middle">
      <thead>
        <tr>
          <th>Título</th>
          <th>Creada</th>
          <th>Tipo</th>
          <th>Respuestas</th>
          <th style="width:220px;">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% surveys.forEach(function(s){ %>
          <tr>
            <td><%= s.title %></td>
            <td><%= dayjs(s.created_at).format('DD/MM/YYYY HH:mm') %></td>
            <td><%= s.external_url ? 'Enlace externo' : 'Preguntas internas' %></td>
            <td><%= s.response_count || 0 %></td>
            <td>
              <div class="d-flex flex-wrap gap-1">
                <a href="/admin/encuestas/<%= s.id %>" class="btn btn-sm btn-outline-primary">Ver resultados</a>
                <a href="/encuestas/<%= s.id %>" target="_blank" class="btn btn-sm btn-outline-secondary">Ver como cliente</a>
                <form method="post" action="/admin/encuestas/<%= s.id %>/cerrar" onsubmit="return confirm('¿Cerrar esta encuesta?');">
                  <button class="btn btn-sm btn-danger">Cerrar</button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <div class="mt-3">
    <a href="/admin" class="btn btn-outline-secondary btn-sm">Volver al panel</a>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body></html>
