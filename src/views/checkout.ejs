<!doctype html><html lang="es"><head>
<meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
<title><%= title %> · <%= site.title %></title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/styles.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="/css/header.css">
</head><body class="d-flex flex-column min-vh-100">

<!-- HEADER (igual que en tus otras vistas) -->
<header class="header">
  <div class="topbar py-2" style="background:<%= site.navbar_color || '#1b8f3a' %>;">
    <div class="container d-flex align-items-center justify-content-between">
      <a href="/" class="d-flex align-items-center text-white text-decoration-none">
        <% if(site.logo_url){ %>
          <img src="<%= site.logo_url %>" class="brand-logo me-2" alt="Logo">
        <% } else { %>
          <strong class="fs-4 text-white m-0"><%= site.title %></strong>
        <% } %>
      </a>
      <div class="d-flex align-items-center gap-3">
        <div class="d-none d-md-flex align-items-center gap-2">
          <% if(site.facebook_url){ %><a class="text-white fs-5" href="<%= site.facebook_url %>" target="_blank" aria-label="Facebook"><i class="bi bi-facebook"></i></a><% } %>
          <% if(site.instagram_url){ %><a class="text-white fs-5" href="<%= site.instagram_url %>" target="_blank" aria-label="Instagram"><i class="bi bi-instagram"></i></a><% } %>
          <% if(site.tiktok_url){ %><a class="text-white fs-5" href="<%= site.tiktok_url %>" target="_blank" aria-label="TikTok"><i class="bi bi-tiktok"></i></a><% } %>
          <% if(site.phone){ %><span class="text-white fw-bold ms-2"><%= site.phone %></span><% } %>
        </div>
        <a href="/actividades" class="btn reserve-btn">RESERVAR</a>
        <button class="navbar-toggler d-inline d-md-none btn btn-outline-light" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu" aria-label="Abrir menú">
          <i class="bi bi-list fs-2 text-white"></i>
        </button>
      </div>
    </div>
  </div>
  <div class="menubar">
    <div class="container">
      <nav class="navbar navbar-expand-md navbar-light p-0">
        <div class="collapse navbar-collapse" id="mainMenu">
          <ul class="navbar-nav me-auto mb-2 mb-md-0">
            <li class="nav-item"><a class="nav-link" href="/">HOME</a></li>
            <li class="nav-item"><a class="nav-link" href="/actividades">ACTIVIDADES</a></li>
            <li class="nav-item"><a class="nav-link" href="/experiencias">EXPERIENCIAS</a></li>
            <li class="nav-item"><a class="nav-link" href="/historia">HISTORIA</a></li>
            <li class="nav-item"><a class="nav-link" href="/contacto">¿CÓMO LLEGAR?</a></li>
            <li class="nav-item"><a class="nav-link" href="/publicaciones">PROMOCIONES</a></li>
            <li class="nav-item"><a class="nav-link" href="/mis-reservas">MIS RESERVAS</a></li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>

<!-- CONTENIDO -->
<main class="container my-4 flex-grow-1">
  <h2 class="mb-3">Reserva</h2>

  <p class="mb-1"><strong>Actividad:</strong> <%= act.name %></p>
  <p class="mb-4"><strong>Horario:</strong> <%= dayjs(slot.start_at).format('DD/MM/YYYY HH:mm') %> - <%= dayjs(slot.end_at).format('HH:mm') %></p>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <form method="post" class="row g-3" id="checkoutForm">
    <input type="hidden" id="unit_price_cents" value="<%= slot.price_cents || 0 %>">

    <!-- Titular -->
    <div class="col-md-6">
      <label class="form-label">Nombre completo</label>
      <input name="holder_name" class="form-control" placeholder="Nombre del titular" required>
    </div>
    <div class="col-md-3">
      <label class="form-label">Teléfono (pase)</label>
      <input name="phone" class="form-control" placeholder="10 dígitos" required>
    </div>
    <div class="col-md-3">
      <label class="form-label">Correo</label>
      <input name="email" id="email" type="email" class="form-control" placeholder="correo@ejemplo.com" required>
    </div>
    <div class="col-md-3">
      <label class="form-label">Confirmar correo</label>
      <input name="email_confirm" id="email_confirm" type="email" class="form-control" placeholder="Repite tu correo" required>
    </div>

    <!-- Cantidad -->
    <div class="col-md-3">
      <label class="form-label">Personas</label>
      <select class="form-select" id="party_size" name="party_size" required>
        <% 
          const available = Math.max(0, (slot.capacity_total - (slot.capacity_reserved||0)));
          const maxShow = Math.min(available || 10, 10);
          for (let i=1;i<=Math.max(maxShow,1);i++){
        %>
          <option value="<%= i %>"><%= i %></option>
        <% } %>
      </select>
    </div>

    <!-- Datos por persona -->
    <div class="col-12">
      <label class="form-label d-block">Datos de cada persona</label>
      <div id="membersFields" class="row g-2"></div>
      <div class="form-text">
        Rango de edad: 0–5, 6–11, 12–18, 19–26, 27–59, 60+
      </div>
    </div>

    <!-- Notas -->
    <div class="col-12">
      <label class="form-label">Notas</label>
      <textarea name="notes" class="form-control" rows="3" placeholder="Información relevante (opcional)"></textarea>
    </div>

    <!-- Pago (solo depósito/transferencia) -->
    <div class="col-12">
      <label class="form-label d-block">Pago</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="pay_method" value="deposit" id="pay_dep" checked>
        <label class="form-check-label" for="pay_dep">Depósito/Transferencia</label>
      </div>
    </div>

    <!-- Resumen -->
    <div class="col-12">
      <div class="p-3 bg-light rounded border">
        <div><strong>Precio por persona:</strong> $ <span id="unitPriceText"><%= ((slot.price_cents||0)/100).toFixed(2) %></span> MXN</div>
        <div><strong>Total:</strong> $ <span id="totalText">0.00</span> MXN</div>
      </div>
    </div>

    <div class="col-12">
      <button class="btn btn-primary" type="submit">Continuar</button>
    </div>
  </form>
</main>

<!-- FOOTER global (como el tuyo actual) -->
<footer class="site-footer text-white mt-auto" style="background:<%= site.navbar_color || '#1b8f3a' %>;">
  <div class="container py-3">
    <div class="row g-3 align-items-center">
      <div class="col-md-6 d-flex align-items-center gap-3">
        <% if (site.logo_url) { %>
          <a href="/" class="d-inline-block"><img src="<%= site.logo_url %>" alt="Logo" style="height:40px"></a>
        <% } else { %>
          <strong><%= site.title %></strong>
        <% } %>
        <div class="small">
          <% if (site.phone) { %><strong>Tel:</strong> <%= site.phone %><% } %><br>
          <span class="text-white-50">
            <%= site.privacy_text || '© Todos los derechos reservados. Privacidad: tus datos se usan solo para gestionar reservas.' %>
          </span>
        </div>
      </div>
      <div class="col-md-6 text-md-end">
        <% if (site.facebook_url) { %>
          <a class="text-white fs-5 me-3" href="<%= site.facebook_url %>" target="_blank" aria-label="Facebook">
            <i class="bi bi-facebook"></i>
          </a>
        <% } %>
        <% if (site.instagram_url) { %>
          <a class="text-white fs-5 me-3" href="<%= site.instagram_url %>" target="_blank" aria-label="Instagram">
            <i class="bi bi-instagram"></i>
          </a>
        <% } %>
        <% if (site.tiktok_url) { %>
          <a class="text-white fs-5" href="<%= site.tiktok_url %>" target="_blank" aria-label="TikTok">
            <i class="bi bi-tiktok"></i>
          </a>
        <% } %>
      </div>
    </div>
  </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // ----- UI dinámica para miembros -----
  const ageOptions = ["0-5","6-11","12-18","19-26","27-59","60+"];

  function personRow(idx){
    return `
    <div class="col-12 col-md-3">
      <input class="form-control" name="members[${idx}][first_name]" placeholder="Nombre(s)" required>
    </div>
    <div class="col-12 col-md-3">
      <input class="form-control" name="members[${idx}][last_name_p]" placeholder="Apellido paterno" required>
    </div>
    <div class="col-12 col-md-3">
      <input class="form-control" name="members[${idx}][last_name_m]" placeholder="Apellido materno" required>
    </div>
    <div class="col-12 col-md-3">
      <select class="form-select" name="members[${idx}][age_range]" required>
        ${ageOptions.map(a=>`<option value="${a}">${a}</option>`).join('')}
      </select>
    </div>`;
  }

  function renderMembers(){
    const qty = parseInt(document.getElementById('party_size').value || '1', 10);
    const box = document.getElementById('membersFields');
    box.innerHTML = '';
    for(let i=0;i<qty;i++){
      const row = document.createElement('div');
      row.className = 'row g-2';
      row.innerHTML = personRow(i);
      box.appendChild(row);
    }
    updateTotal();
  }

  function updateTotal(){
    const unit = parseInt(document.getElementById('unit_price_cents').value || '0', 10);
    const qty = parseInt(document.getElementById('party_size').value || '1', 10);
    const total = (unit * qty) / 100;
    document.getElementById('totalText').textContent = total.toFixed(2);
  }

  document.getElementById('party_size').addEventListener('change', renderMembers);
  renderMembers();

  // Validación: email y confirmación deben coincidir
  const form = document.getElementById('checkoutForm');
  form.addEventListener('submit', function (e) {
    const email = (document.getElementById('email').value || '').trim();
    const email2 = (document.getElementById('email_confirm').value || '').trim();
    if (email !== email2) {
      e.preventDefault();
      alert('El correo y la confirmación no coinciden.');
    }
  });
</script>
</body></html>
